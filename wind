-- Serviços
local UserInputService = game:GetService("UserInputService")
local VirtualInputManager = game:GetService("VirtualInputManager")

-- Variável para controlar se o espaço está sendo segurado
local holdingSpace = false

-- Função para simular pressionar espaço continuamente
local function pressSpaceContinuously()
    while holdingSpace do
        -- Simula pressionar a tecla ESPAÇO
        VirtualInputManager:SendKeyEvent(true, Enum.KeyCode.Space, false, game) -- Pressiona espaço
        task.wait(0.1) -- Intervalo entre os pressionamentos
        VirtualInputManager:SendKeyEvent(false, Enum.KeyCode.Space, false, game) -- Solta espaço
        task.wait(0.1) -- Ajuste conforme necessário
    end
end

-- Detecta quando a tecla ESPAÇO é pressionada
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.Space and not gameProcessed then
        if not holdingSpace then
            holdingSpace = true
            pressSpaceContinuously()
        end
    end
end)

-- Detecta quando a tecla ESPAÇO é solta
UserInputService.InputEnded:Connect(function(input, gameProcessed)
    if input.KeyCode == Enum.KeyCode.Space then
        holdingSpace = false
    end
end)
